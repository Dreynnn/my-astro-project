---
import { personalData } from '~/data/portfolio/personal';
import { getPermalink } from '~/utils/permalinks';
---

<section class="relative overflow-hidden bg-gradient-to-br from-blue-50 to-indigo-100 dark:from-slate-900 dark:to-slate-800 py-16 md:py-20">
  <div class="mx-auto max-w-7xl px-4 sm:px-6">
    <div class="py-12 md:py-16">
      <div class="mx-auto max-w-4xl text-center">
        <!-- Profile Image -->
        <div class="mb-8 flex justify-center">
          <div class="relative">
            <div class="h-32 w-32 md:h-40 md:w-40 rounded-full overflow-hidden border-4 border-white dark:border-slate-700 shadow-lg">
              <img
                src="https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=400&q=80"
                alt={personalData.name}
                class="h-full w-full object-cover"
                loading="lazy"
              />
            </div>
            <div class="absolute -bottom-2 -right-2 h-8 w-8 bg-green-500 rounded-full border-2 border-white dark:border-slate-700"></div>
          </div>
        </div>

        <!-- Name and Title -->
        <h1 class="mb-4 text-4xl font-bold leading-tight text-slate-900 dark:text-white md:text-5xl lg:text-6xl">
          {personalData.name}
        </h1>
        <p class="mb-6 text-xl text-slate-600 dark:text-slate-400 md:text-2xl">
          {personalData.title}
        </p>

        <!-- Location -->
        <div class="mb-8 flex items-center justify-center text-slate-600 dark:text-slate-400">
          <i class="icon icon-tabler icon-tabler-map-pin mr-2 h-5 w-5"></i>
          <span>{personalData.location}</span>
        </div>

        <!-- Bio -->
        <p class="mb-8 text-lg text-slate-600 dark:text-slate-400 max-w-3xl mx-auto">
          {personalData.bio}
        </p>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center mb-8">
          <a
            href="#contact"
            class="inline-flex items-center justify-center rounded-md bg-blue-600 px-6 py-3 text-center font-medium text-white hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 dark:focus:ring-offset-slate-900 transition-colors"
          >
            <i class="icon icon-tabler icon-tabler-mail mr-2 h-5 w-5"></i>
            Get In Touch
          </a>
          <a
            href="#projects"
            class="inline-flex items-center justify-center rounded-md border border-slate-300 bg-white px-6 py-3 text-center font-medium text-slate-700 hover:bg-slate-50 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 dark:border-slate-600 dark:bg-slate-800 dark:text-slate-300 dark:hover:bg-slate-700 dark:focus:ring-offset-slate-900 transition-colors"
          >
            <i class="icon icon-tabler icon-tabler-briefcase mr-2 h-5 w-5"></i>
            View Projects
          </a>
        </div>

        <!-- Social Links -->
        <div class="flex justify-center space-x-4">
          {personalData.socialLinks.map((social) => (
            <a
              href={social.url}
              target="_blank"
              rel="noopener noreferrer"
              class="flex h-10 w-10 items-center justify-center rounded-full border border-slate-300 bg-white text-slate-700 hover:bg-slate-50 hover:text-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 dark:border-slate-600 dark:bg-slate-800 dark:text-slate-300 dark:hover:bg-slate-700 dark:hover:text-blue-400 dark:focus:ring-offset-slate-900 transition-colors"
              aria-label={social.name}
            >
              <i class={`icon icon-tabler ${social.icon} h-5 w-5`}></i>
            </a>
          ))}
        </div>
      </div>
    </div>
  </div>

  <!-- Background Pattern -->
  <div class="absolute inset-0 bg-grid-slate-100 [mask-image:linear-gradient(0deg,white,rgba(255,255,255,0.6))] dark:bg-grid-slate-700/25 dark:[mask-image:linear-gradient(0deg,rgba(255,255,255,0.1),rgba(255,255,255,0.5))]"></div>
</section>

<style>
  .bg-grid-slate-100 {
    background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 32 32' width='32' height='32' fill='none' stroke='rgb(148 163 184 / 0.1)'%3e%3cpath d='m0 .5h32m-32 0v32'/%3e%3c/svg%3e");
  }
  .bg-grid-slate-700\/25 {
    background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 32 32' width='32' height='32' fill='none' stroke='rgb(51 65 85 / 0.25)'%3e%3cpath d='m0 .5h32m-32 0v32'/%3e%3c/svg%3e");
  }
</style> 