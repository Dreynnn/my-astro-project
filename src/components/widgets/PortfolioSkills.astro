---
import { skillsData } from '~/data/portfolio/skills';
---

<section id="skills" class="py-16 md:py-20 bg-slate-50 dark:bg-slate-900">
  <div class="mx-auto max-w-7xl px-4 sm:px-6">
    <!-- Section Header -->
    <div class="mb-12 text-center">
      <h2 class="mb-4 text-3xl font-bold leading-tight text-slate-900 dark:text-white md:text-4xl">
        Skills & Technologies
      </h2>
      <p class="text-lg text-slate-600 dark:text-slate-400">
        My technical expertise and proficiency levels
      </p>
    </div>

    <!-- Skills Categories -->
    <div class="grid gap-8 md:grid-cols-2">
      {skillsData.categories.map((category) => (
        <div class="rounded-lg border border-slate-200 bg-white p-6 shadow-sm dark:border-slate-700 dark:bg-slate-800">
          <div class="mb-6 flex items-center">
            <div class="mr-3 flex h-10 w-10 items-center justify-center rounded-lg bg-blue-100 dark:bg-blue-900">
              <i class="icon icon-tabler icon-tabler-code h-5 w-5 text-blue-600 dark:text-blue-400"></i>
            </div>
            <h3 class="text-xl font-semibold text-slate-900 dark:text-white">
              {category.name}
            </h3>
          </div>
          
          <div class="space-y-4">
            {category.skills.map((skill) => (
              <div>
                <div class="mb-2 flex items-center justify-between">
                  <span class="text-sm font-medium text-slate-700 dark:text-slate-300">
                    {skill.name}
                  </span>
                  <span class="text-xs text-slate-500 dark:text-slate-500">
                    {skill.level}%
                  </span>
                </div>
                <div class="h-2 w-full rounded-full bg-slate-200 dark:bg-slate-700">
                  <div
                    class="h-2 rounded-full bg-gradient-to-r from-blue-500 to-blue-600 transition-all duration-500 ease-out"
                    style={`width: ${skill.level}%`}
                  ></div>
                </div>
              </div>
            ))}
          </div>
        </div>
      ))}
    </div>

    <!-- Additional Skills -->
    <div class="mt-12">
      <h3 class="mb-8 text-center text-2xl font-semibold text-slate-900 dark:text-white">
        Additional Skills & Tools
      </h3>
      <div class="flex flex-wrap justify-center gap-3">
        {[
          'Git & GitHub',
          'REST APIs',
          'GraphQL',
          'Jest',
          'Cypress',
          'Webpack',
          'Vite',
          'Docker',
          'Kubernetes',
          'AWS',
          'Google Cloud',
          'Firebase',
          'Netlify',
          'Vercel',
          'Figma',
          'Adobe XD',
          'Sketch',
          'Postman',
          'Insomnia',
          'VS Code',
          'IntelliJ IDEA',
          'Terminal',
          'Linux',
          'MacOS',
          'Windows'
        ].map((skill) => (
          <span class="rounded-full bg-slate-200 px-4 py-2 text-sm font-medium text-slate-700 dark:bg-slate-700 dark:text-slate-300">
            {skill}
          </span>
        ))}
      </div>
    </div>

    <!-- Learning Section -->
    <div class="mt-16 rounded-lg border border-slate-200 bg-white p-8 shadow-sm dark:border-slate-700 dark:bg-slate-800">
      <div class="text-center">
        <div class="mb-4 flex justify-center">
          <div class="flex h-16 w-16 items-center justify-center rounded-full bg-green-100 dark:bg-green-900">
            <i class="icon icon-tabler icon-tabler-book h-8 w-8 text-green-600 dark:text-green-400"></i>
          </div>
        </div>
        <h3 class="mb-4 text-2xl font-semibold text-slate-900 dark:text-white">
          Always Learning
        </h3>
        <p class="mb-6 text-slate-600 dark:text-slate-400">
          I'm constantly expanding my skill set and staying up-to-date with the latest technologies and best practices.
        </p>
        <div class="flex flex-wrap justify-center gap-3">
          {[
            'Rust',
            'Go',
            'Machine Learning',
            'Blockchain',
            'Web3',
            'Three.js',
            'WebGL',
            'PWA',
            'Microservices',
            'Serverless'
          ].map((skill) => (
            <span class="rounded-full bg-green-100 px-4 py-2 text-sm font-medium text-green-700 dark:bg-green-900 dark:text-green-300">
              Learning {skill}
            </span>
          ))}
        </div>
      </div>
    </div>
  </div>
</section> 