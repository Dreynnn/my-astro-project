---
import { experienceData } from '~/data/portfolio/experience';
---

<section id="experience" class="py-16 md:py-20 bg-slate-50 dark:bg-slate-900">
  <div class="mx-auto max-w-7xl px-4 sm:px-6">
    <!-- Section Header -->
    <div class="mb-12 text-center">
      <h2 class="mb-4 text-3xl font-bold leading-tight text-slate-900 dark:text-white md:text-4xl">
        Work Experience
      </h2>
      <p class="text-lg text-slate-600 dark:text-slate-400">
        My professional journey and career highlights
      </p>
    </div>

    <!-- Experience Timeline -->
    <div class="relative">
      <!-- Timeline Line -->
      <div class="absolute left-4 top-0 bottom-0 w-0.5 bg-slate-200 dark:bg-slate-700 md:left-1/2 md:-translate-x-1/2"></div>

      <!-- Experience Items -->
      <div class="space-y-12">
        {experienceData.positions.map((position, index) => (
          <div class={`relative flex items-center ${index % 2 === 0 ? 'md:flex-row' : 'md:flex-row-reverse'}`}>
            <!-- Timeline Dot -->
            <div class="absolute left-4 z-10 flex h-8 w-8 items-center justify-center rounded-full border-4 border-white bg-blue-600 shadow-lg dark:border-slate-800 md:left-1/2 md:-translate-x-1/2">
              <i class="icon icon-tabler icon-tabler-briefcase h-4 w-4 text-white"></i>
            </div>

            <!-- Content Card -->
            <div class={`ml-12 w-full md:ml-0 md:w-5/12 ${index % 2 === 0 ? 'md:pr-8' : 'md:pl-8'}`}>
              <div class="rounded-lg border border-slate-200 bg-white p-6 shadow-sm dark:border-slate-700 dark:bg-slate-800">
                <!-- Position Header -->
                <div class="mb-4">
                  <div class="mb-2 flex items-center justify-between">
                    <h3 class="text-xl font-semibold text-slate-900 dark:text-white">
                      {position.position}
                    </h3>
                    <span class="rounded-full bg-blue-100 px-3 py-1 text-xs font-medium text-blue-700 dark:bg-blue-900 dark:text-blue-300">
                      {position.startDate} - {position.endDate}
                    </span>
                  </div>
                  <div class="mb-2 flex items-center text-slate-600 dark:text-slate-400">
                    <i class="icon icon-tabler icon-tabler-building mr-2 h-4 w-4"></i>
                    <span class="font-medium">{position.company}</span>
                  </div>
                  <div class="flex items-center text-slate-500 dark:text-slate-500">
                    <i class="icon icon-tabler icon-tabler-map-pin mr-2 h-4 w-4"></i>
                    <span>{position.location}</span>
                  </div>
                </div>

                <!-- Description -->
                <p class="mb-4 text-slate-600 dark:text-slate-400">
                  {position.description}
                </p>

                <!-- Key Achievements -->
                <div class="mb-4">
                  <h4 class="mb-2 text-sm font-semibold text-slate-900 dark:text-white">
                    Key Achievements:
                  </h4>
                  <ul class="space-y-1">
                    {position.achievements.map((achievement) => (
                      <li class="flex items-start text-sm text-slate-600 dark:text-slate-400">
                        <i class="icon icon-tabler icon-tabler-check mr-2 mt-0.5 h-4 w-4 text-green-500"></i>
                        <span>{achievement}</span>
                      </li>
                    ))}
                  </ul>
                </div>

                <!-- Technologies -->
                <div>
                  <h4 class="mb-2 text-sm font-semibold text-slate-900 dark:text-white">
                    Technologies Used:
                  </h4>
                  <div class="flex flex-wrap gap-2">
                    {position.technologies.map((tech) => (
                      <span class="rounded-full bg-slate-100 px-3 py-1 text-xs font-medium text-slate-700 dark:bg-slate-700 dark:text-slate-300">
                        {tech}
                      </span>
                    ))}
                  </div>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Career Stats -->
    <div class="mt-16 grid gap-8 md:grid-cols-4">
      <div class="text-center">
        <div class="mb-2 text-3xl font-bold text-blue-600 dark:text-blue-400">5+</div>
        <div class="text-sm text-slate-600 dark:text-slate-400">Years Experience</div>
      </div>
      <div class="text-center">
        <div class="mb-2 text-3xl font-bold text-blue-600 dark:text-blue-400">25+</div>
        <div class="text-sm text-slate-600 dark:text-slate-400">Projects Completed</div>
      </div>
      <div class="text-center">
        <div class="mb-2 text-3xl font-bold text-blue-600 dark:text-blue-400">15+</div>
        <div class="text-sm text-slate-600 dark:text-slate-400">Technologies</div>
      </div>
      <div class="text-center">
        <div class="mb-2 text-3xl font-bold text-blue-600 dark:text-blue-400">100%</div>
        <div class="text-sm text-slate-600 dark:text-slate-400">Client Satisfaction</div>
      </div>
    </div>
  </div>
</section> 