---
import { personalData } from '~/data/portfolio/personal';
---

<section id="contact" class="py-16 md:py-20">
  <div class="mx-auto max-w-7xl px-4 sm:px-6">
    <!-- Section Header -->
    <div class="mb-12 text-center">
      <h2 class="mb-4 text-3xl font-bold leading-tight text-slate-900 dark:text-white md:text-4xl">
        Get In Touch
      </h2>
      <p class="text-lg text-slate-600 dark:text-slate-400">
        Let's discuss your next project or opportunity
      </p>
    </div>

    <div class="grid gap-12 lg:grid-cols-2">
      <!-- Contact Information -->
      <div>
        <h3 class="mb-6 text-2xl font-semibold text-slate-900 dark:text-white">
          Contact Information
        </h3>
        
        <div class="space-y-6">
          <!-- Email -->
          <div class="flex items-start">
            <div class="mr-4 flex h-12 w-12 items-center justify-center rounded-lg bg-blue-100 dark:bg-blue-900">
              <i class="icon icon-tabler icon-tabler-mail h-6 w-6 text-blue-600 dark:text-blue-400"></i>
            </div>
            <div>
              <h4 class="text-lg font-semibold text-slate-900 dark:text-white">Email</h4>
              <a
                href={`mailto:${personalData.email}`}
                class="text-slate-600 hover:text-blue-600 dark:text-slate-400 dark:hover:text-blue-400"
              >
                {personalData.email}
              </a>
            </div>
          </div>

          <!-- Phone -->
          <div class="flex items-start">
            <div class="mr-4 flex h-12 w-12 items-center justify-center rounded-lg bg-green-100 dark:bg-green-900">
              <i class="icon icon-tabler icon-tabler-phone h-6 w-6 text-green-600 dark:text-green-400"></i>
            </div>
            <div>
              <h4 class="text-lg font-semibold text-slate-900 dark:text-white">Phone</h4>
              <a
                href={`tel:${personalData.phone}`}
                class="text-slate-600 hover:text-green-600 dark:text-slate-400 dark:hover:text-green-400"
              >
                {personalData.phone}
              </a>
            </div>
          </div>

          <!-- Location -->
          <div class="flex items-start">
            <div class="mr-4 flex h-12 w-12 items-center justify-center rounded-lg bg-purple-100 dark:bg-purple-900">
              <i class="icon icon-tabler icon-tabler-map-pin h-6 w-6 text-purple-600 dark:text-purple-400"></i>
            </div>
            <div>
              <h4 class="text-lg font-semibold text-slate-900 dark:text-white">Location</h4>
              <p class="text-slate-600 dark:text-slate-400">{personalData.location}</p>
            </div>
          </div>

          <!-- Availability -->
          <div class="flex items-start">
            <div class="mr-4 flex h-12 w-12 items-center justify-center rounded-lg bg-orange-100 dark:bg-orange-900">
              <i class="icon icon-tabler icon-tabler-clock h-6 w-6 text-orange-600 dark:text-orange-400"></i>
            </div>
            <div>
              <h4 class="text-lg font-semibold text-slate-900 dark:text-white">Availability</h4>
              <p class="text-slate-600 dark:text-slate-400">Available for new opportunities</p>
            </div>
          </div>
        </div>

        <!-- Social Links -->
        <div class="mt-8">
          <h4 class="mb-4 text-lg font-semibold text-slate-900 dark:text-white">Follow Me</h4>
          <div class="flex space-x-4">
            {personalData.socialLinks.map((social) => (
              <a
                href={social.url}
                target="_blank"
                rel="noopener noreferrer"
                class="flex h-12 w-12 items-center justify-center rounded-lg border border-slate-300 bg-white text-slate-700 hover:bg-slate-50 hover:text-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 dark:border-slate-600 dark:bg-slate-800 dark:text-slate-300 dark:hover:bg-slate-700 dark:hover:text-blue-400 dark:focus:ring-offset-slate-900 transition-colors"
                aria-label={social.name}
              >
                <i class={`icon icon-tabler ${social.icon} h-6 w-6`}></i>
              </a>
            ))}
          </div>
        </div>
      </div>

      <!-- Contact Form -->
      <div>
        <h3 class="mb-6 text-2xl font-semibold text-slate-900 dark:text-white">
          Send a Message
        </h3>
        
        <form class="space-y-6" id="contactForm">
          <div class="grid gap-6 md:grid-cols-2">
            <div>
              <label for="name" class="mb-2 block text-sm font-medium text-slate-700 dark:text-slate-300">
                Name *
              </label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full rounded-md border border-slate-300 bg-white px-4 py-3 text-slate-700 placeholder-slate-400 focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 dark:border-slate-600 dark:bg-slate-800 dark:text-slate-300 dark:placeholder-slate-500 dark:focus:border-blue-400 dark:focus:ring-offset-slate-900"
                placeholder="Your name"
              />
            </div>
            <div>
              <label for="email" class="mb-2 block text-sm font-medium text-slate-700 dark:text-slate-300">
                Email *
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full rounded-md border border-slate-300 bg-white px-4 py-3 text-slate-700 placeholder-slate-400 focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 dark:border-slate-600 dark:bg-slate-800 dark:text-slate-300 dark:placeholder-slate-500 dark:focus:border-blue-400 dark:focus:ring-offset-slate-900"
                placeholder="your.email@example.com"
              />
            </div>
          </div>
          
          <div>
            <label for="subject" class="mb-2 block text-sm font-medium text-slate-700 dark:text-slate-300">
              Subject *
            </label>
            <input
              type="text"
              id="subject"
              name="subject"
              required
              class="w-full rounded-md border border-slate-300 bg-white px-4 py-3 text-slate-700 placeholder-slate-400 focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 dark:border-slate-600 dark:bg-slate-800 dark:text-slate-300 dark:placeholder-slate-500 dark:focus:border-blue-400 dark:focus:ring-offset-slate-900"
              placeholder="Project inquiry, job opportunity, etc."
            />
          </div>
          
          <div>
            <label for="message" class="mb-2 block text-sm font-medium text-slate-700 dark:text-slate-300">
              Message *
            </label>
            <textarea
              id="message"
              name="message"
              rows="6"
              required
              class="w-full rounded-md border border-slate-300 bg-white px-4 py-3 text-slate-700 placeholder-slate-400 focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 dark:border-slate-600 dark:bg-slate-800 dark:text-slate-300 dark:placeholder-slate-500 dark:focus:border-blue-400 dark:focus:ring-offset-slate-900"
              placeholder="Tell me about your project or opportunity..."
            ></textarea>
          </div>
          
          <button
            type="submit"
            class="w-full rounded-md bg-blue-600 px-6 py-3 text-center font-medium text-white hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 dark:focus:ring-offset-slate-900 transition-colors"
          >
            <i class="icon icon-tabler icon-tabler-send mr-2 h-5 w-5"></i>
            Send Message
          </button>
        </form>

        <!-- Form Success/Error Messages -->
        <div id="formMessage" class="mt-4 hidden rounded-md p-4">
          <p id="messageText" class="text-sm"></p>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  // Contact form handling
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('contactForm');
    const messageDiv = document.getElementById('formMessage');
    const messageText = document.getElementById('messageText');

    form.addEventListener('submit', function(e) {
      e.preventDefault();
      
      // Get form data
      const formData = new FormData(form);
      const data = Object.fromEntries(formData);
      
      // Simple validation
      if (!data.name || !data.email || !data.subject || !data.message) {
        showMessage('Please fill in all required fields.', 'error');
        return;
      }
      
      // Email validation
      const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
      if (!emailRegex.test(data.email)) {
        showMessage('Please enter a valid email address.', 'error');
        return;
      }
      
      // Simulate form submission (replace with actual form handling)
      showMessage('Thank you for your message! I\'ll get back to you soon.', 'success');
      form.reset();
    });

    function showMessage(text, type) {
      messageText.textContent = text;
      messageDiv.className = `mt-4 rounded-md p-4 ${type === 'success' ? 'bg-green-100 text-green-700 dark:bg-green-900 dark:text-green-300' : 'bg-red-100 text-red-700 dark:bg-red-900 dark:text-red-300'}`;
      messageDiv.classList.remove('hidden');
      
      // Hide message after 5 seconds
      setTimeout(() => {
        messageDiv.classList.add('hidden');
      }, 5000);
    }
  });
</script> 